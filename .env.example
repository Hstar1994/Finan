# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finan_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT Configuration
# Generate a strong secret using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_replace_with_strong_random_string_minimum_64_characters
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
# Comma-separated list of allowed origins
# Development: http://localhost:8080,http://localhost:3000,http://localhost:5173
# Production: https://app.finan.com,https://www.finan.com
CORS_ORIGIN=http://localhost:8080,http://localhost:3000,http://localhost:5173
